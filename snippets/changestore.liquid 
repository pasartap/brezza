<script>
  $(document).ready(function(){
   $(document).on("click",".changestore, .mobilemenustore",function(){
    $('#myModal').modal('toggle');
  });
  $(document).on("click",".mannualstore.withemptycart li",function(e){
    e.preventDefault();
    var url      = window.location.href;
    var cartitm = "{{ cart.item_count }}";    
    var markgetstore = $(this).attr("data-store");
    if(cartitm != 0){
    if (confirm('You have items in your shopping cart. Switching to a different market will empty the shopping cart. Do you want to proceed?')) {
        $.ajax({
          type: "POST",
          dataType: 'json',
          url: '/cart/clear.js',
          success: function(){
            $.cookie("PasarStoreName", markgetstore);       
            window.location.href=url;
          }      
        });
      }else{
        return false;
      }
    }else{
        $.cookie("PasarStoreName", markgetstore);       
        window.location.href=url;
    
    }
    });
  });
  function initialize() {
    var acInputs = document.getElementsByClassName("autocomplete");
    for (var i = 0; i < acInputs.length; i++) {
        var autocomplete = new google.maps.places.Autocomplete(acInputs[i]);
        autocomplete.inputId = acInputs[i].id;
        google.maps.event.addListener(autocomplete, 'place_changed');
    }
}
initialize();
</script>